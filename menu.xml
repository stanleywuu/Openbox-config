<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <item label="Terminal emulator">
    <action name="Execute"><execute>x-terminal-emulator</execute></action>
  </item>
  <item label="Web browser">
    <action name="Execute"><execute>x-www-browser</execute></action>
  </item>
  <!-- This requires the presence of the 'openbox-menu' package to work -->
	  <!--<menu id="/Debian" />-->
  <separator />
  <menu id="applications-menu" label="Applications" execute="/usr/bin/obamenu"/>
  <separator />
  <item label="ObConf">
    <action name="Execute"><execute>obconf</execute></action>
  </item>
  <item label="ObMenu">
    <action name="Execute"><execute>obmenu</execute></action>
  </item>
  <separator />
  <menu id="configmenu" label="configs">
	  <item label="Config obmenu">
		  <action name="Execute"><execute>vim ~/.config/openbox/menu.xml</execute></action>
	  </item>
	  <item label="Config rc">
		  <action name="Execute"><execute>vim ~/.config/openbox/rc.xml </execute></action>
	  </item>
  </menu>
  <item label="Config terminal">
	  <action name="Execute"><execute>terminator -T config --working-directory=~/.config/openbox/</execute></action>
  </item>

  <item label="Restart apache">
	  <action name="Execute"><execute>terminator -e 'service apache2 restart'</execute></action>
  </item>
  <item label="Reconfigure">
    <action name="Reconfigure" />
  </item>
  <item label="Restart">
    <action name="Restart" />
  </item>
  <separator />
  <item label="Exit">
    <action name="Exit" />
  </item>
</menu>

</openbox_menu>
